<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/oidboxgame_table"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_title2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:scaleType="centerInside"
            android:src="@drawable/oidbox_title" />

        <TextView
            android:id="@+id/tv_oidboxquestiontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="-70dp"
            android:text="趣味知识竞赛"
            android:textColor="@android:color/black"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/im_zone2"
            android:layout_width="400dp"
            android:layout_height="335dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/oidbox_zone" />

        <TextView
            android:id="@+id/tv_oidboxquestionid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-320dp"
            android:text="第1题："
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_oidboxquestion"
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:text="题目"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_oidboxanswer"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:text="选项"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <ScrollView
            android:id="@+id/scroll_OidBoxQuestion_Rank"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-320dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_OidBoxQuestion_Rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1\.排行榜\n2\.排行榜\n3\.排行榜"
                android:textColor="@android:color/black"
                android:textSize="25sp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-60dp"
            android:scaleType="centerInside"
            android:src="@drawable/oidbox_time" />

        <TextView
            android:id="@+id/tv_OidBoxQuestion_State"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-100dp"
            android:gravity="center_horizontal"
            android:text="倒计时"
            android:textColor="@android:color/black"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/im_result2"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/oidbox_result" />

        <TextView
            android:id="@+id/tv_OidBoxQuestion_Result"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-110dp"
            android:gravity="center"
            android:text="1号：1/5 10秒\n2号：2/5 20秒\n3号：3/5 30秒"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_oidboxquestiontime"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-90dp"
            android:gravity="center"
            android:text="20秒"
            android:textColor="@android:color/holo_red_light"
            android:textSize="70sp" />

        <ImageView
            android:id="@+id/im_button2"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/oidbox_button" />

        <Button
            android:id="@+id/bt_OidBoxQuestion_Reset"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-225dp"
            android:background="@color/transparent"
            android:text="重置" />

        <Button
            android:id="@+id/bt_OidBoxQuestion_Start"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:background="@color/transparent"
            android:text="开始" />

        <Button
            android:id="@+id/bt_OidBoxQuestion_Result"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/transparent"
            android:text="结果" />

        <Button
            android:id="@+id/bt_OidBoxQuestion_Rank"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:text="排行榜" />


    </LinearLayout>


</LinearLayout>