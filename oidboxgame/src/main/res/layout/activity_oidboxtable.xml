<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/oidboxgame_table"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:scaleType="centerInside"
            android:src="@drawable/oidbox_title" />

        <TextView
            android:id="@+id/tv_oidboxtable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="-70dp"
            android:text="舒尔特竞赛"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/im_zone"
            android:layout_width="360dp"
            android:layout_height="335dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/oidbox_zone" />

        <TableLayout

            android:id="@+id/tablelayout_OidBoxGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-330dp"
            android:layout_marginBottom="-10dp"
            android:visibility="visible">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark">

                <TextView
                    android:id="@+id/tb_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tb_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tb_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark">

                <TextView
                    android:id="@+id/tb_4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tb_5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tb_6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark">

                <TextView
                    android:id="@+id/tb_7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tb_8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tb_9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@android:color/black"
                    android:textSize="70sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/sp_OidBoxTable"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-300dp"
            android:textSize="20sp"
            android:padding="2dp"
            android:background="@color/transparent"
            android:entries="@array/TableTime"
            android:visibility="visible" />

        <ScrollView
            android:id="@+id/scroll_OidBoxTable_Rank"
            android:layout_width="350dp"
            android:layout_height="260dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="1dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_OidBoxTable_Rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1\.排行榜\n2\.排行榜\n3\.排行榜"
                android:textColor="@android:color/black"
                android:textSize="25sp" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-60dp"
            android:scaleType="centerInside"
            android:src="@drawable/oidbox_time" />

        <TextView
            android:id="@+id/tv_OidBoxTable_State"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-100dp"
            android:gravity="center_horizontal"
            android:text="倒计时"
            android:textColor="@android:color/black"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/im_result"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/oidbox_result" />

        <TextView
            android:id="@+id/tv_OidBoxTable_Result"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/im_result"
            android:layout_alignEnd="@+id/im_result"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-120dp"
            android:gravity="center_horizontal"
            android:text="1号：10秒\n2号：20秒\n3号：30秒"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_oidboxtime"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-100dp"
            android:gravity="center"
            android:text="20秒"
            android:textColor="@android:color/holo_red_light"
            android:textSize="70sp" />

        <ImageView
            android:id="@+id/im_button"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginTop="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/oidbox_button" />

        <Button
            android:id="@+id/bt_OidBoxTable_Reset"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-225dp"
            android:background="@color/transparent"
            android:text="重置"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_OidBoxTable_Start"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:background="@color/transparent"
            android:text="开始"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_OidBoxTable_Result"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/transparent"
            android:text="结果"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_OidBoxTable_Rank"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:text="排行榜"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>