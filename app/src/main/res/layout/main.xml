<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/BlueBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/BlueBar"
                android:src="@drawable/blue_bar" />

            <ImageButton
                android:id="@+id/BlueUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BlueBar"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/BlueUpload"
                android:src="@drawable/blue_upload" />

            <ImageButton
                android:id="@+id/RoboSoul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BlueUpload"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/robosoul" />

            <ImageButton
                android:id="@+id/yaokongche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RoboSoul"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/steamwifi" />

            <ImageButton
                android:id="@+id/bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yaokongche"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bluetooth" />

            <ImageButton
                android:id="@+id/programfang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bluetooth"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/blue_programfang" />

            <ImageButton
                android:id="@+id/mutifangfang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/programfang"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/blue_mutifangfang" />

            <ImageButton
                android:id="@+id/bluehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mutifangfang"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/blue_house" />

            <ImageButton
                android:id="@+id/blueoidbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bluehouse"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/blue_oidbox" />

            <ImageButton
                android:id="@+id/bluehongzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blueoidbox"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/blue_hongzheng" />

            <ImageButton
                android:id="@+id/blueiot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bluehongzheng"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/blue_iot" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>