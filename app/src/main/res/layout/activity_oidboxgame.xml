<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10秒挑战："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <CheckBox
                android:id="@+id/game1_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否需要连接"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/game1_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="未连接"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/game1_mID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小方方ID："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/game1_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="小方方数字1-10"
                android:inputType="number"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game1_mdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/game1_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1为成功0为失败"
                android:inputType="number"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

        </LinearLayout>

        <Button
            android:id="@+id/game1_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10秒挑战模拟发送"
            android:textColor="@color/contents_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:textColor="@color/contents_text">

            <TextView
                android:id="@+id/game2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="按键测速："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <CheckBox
                android:id="@+id/game2_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否需要连接"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/game2_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="未连接"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/game2_mID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小方方ID："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/game2_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="小方方数字1-10"
                android:inputType="number"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game2_mdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/game2_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="按键次数"
                android:inputType="number"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

        </LinearLayout>

        <Button
            android:id="@+id/game2_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按键测速模拟发送"
            android:textColor="@color/contents_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="火眼金睛："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <CheckBox
                android:id="@+id/game3_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否需要连接"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/game3_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="未连接"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/game3_mID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小方方ID："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/game3_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="小方方数字1-10"
                android:inputType="number"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/game3_mdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据："
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

            <EditText
                android:id="@+id/game3_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="分数/100"
                android:inputType="number"
                android:textColor="@color/contents_text"
                android:textSize="10pt" />

        </LinearLayout>

        <Button
            android:id="@+id/game3_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="火眼金睛模拟发送"
            android:textColor="@color/contents_text" />

        <TextView
            android:id="@+id/game1_fangfang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="小方方-10秒挑战：未连接"
            android:textColor="@color/contents_text"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/game1_fangfangID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID： MAC："
            android:textColor="@color/contents_text"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/game2_fangfang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="小方方-按键测速：未连接"
            android:textColor="@color/contents_text"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/game2_fangfangID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID： MAC："
            android:textColor="@color/contents_text"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/game3_fangfang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="小方方-火眼金睛：未连接"
            android:textColor="@color/contents_text"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/game3_fangfangID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID： MAC："
            android:textColor="@color/contents_text"
            android:textSize="10pt" />

    </LinearLayout>
</ScrollView>