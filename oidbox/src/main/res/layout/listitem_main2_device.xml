<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@mipmap/listitem_device" />

    <TextView
        android:id="@+id/listitem_main2_devicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="Oidbox"
        android:textColor="@color/white"
        android:textSize="25dp" />


    <com.xuexiang.xui.widget.progress.loading.MiniLoadingView
        android:id="@+id/loadingView_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="150dp"
        android:clickable="false"
        app:mlv_loading_view_size="45dp" />

    <ImageButton
        android:id="@+id/listitem_main2_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="150dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/icon_wifi" />

    <com.xuexiang.xui.widget.button.switchbutton.SwitchButton
        android:id="@+id/listitem_main2_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        app:swb_backRadius="10dp"
        app:swb_textOff="关"
        app:swb_textOn="开"
        app:swb_thumbColor="@color/gray"
        app:swb_thumbHeight="40dp"
        app:swb_thumbMargin="10dp"
        app:swb_thumbRadius="10dp"
        app:swb_thumbRangeRatio="2.3"
        app:swb_thumbWidth="40dp" />

    <ImageButton
        android:id="@+id/listitem_main2_more"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/listitem_fang" />


</FrameLayout>