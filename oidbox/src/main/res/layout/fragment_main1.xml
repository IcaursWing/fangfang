<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_page" />

        <com.xuexiang.xui.widget.actionbar.TitleBar
            android:id="@+id/titlebar_main1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_config_color_transparent"
            app:tb_titleText="听小方游乐天地"
            app:tb_titleTextColor="@color/xui_config_color_white"
            app:tb_useThemeColor="false" />
    </FrameLayout>


    <widget.MyScrollView
        android:id="@+id/ScrollView_main1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <widget.RadiusImageBanner
                android:id="@+id/banner_main1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bb_barPaddingBottom="10dp"
                app:bb_scale="0.4317" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="益智游戏"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <widget.MyListView
                android:id="@+id/listview_main1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </widget.MyScrollView>


</LinearLayout>