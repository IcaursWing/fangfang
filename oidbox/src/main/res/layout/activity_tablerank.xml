<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xui_config_color_light_blue"
    android:orientation="vertical">


    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/titlebar_tablerank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xui_config_color_light_blue"
        app:tb_leftImageResource="@drawable/xui_ic_navigation_back_white"
        app:tb_titleText="舒尔特排行榜"
        app:tb_titleTextColor="@color/white" />

    <org.angmarch.views.NiceSpinner
        android:id="@+id/niceSpinner_tablerank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:textSize="15dp"
        app:entries="@array/TableTime" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/imageview_tablerank_myimage"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:src="@drawable/default_photo"
            app:riv_border_color="@color/xui_config_color_gray_6"
            app:riv_border_width="1dp"
            app:riv_is_circle="true"
            app:riv_selected_border_color="@color/xui_config_color_gray_4"
            app:riv_selected_border_width="1px"
            app:riv_selected_mask_color="@color/xui_config_color_gray_8" />

        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            android:id="@+id/supertextview_tablerank_myrecord"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:sCenterBottomTextColor="@color/yellow"
            app:sCenterBottomTextString="无"
            app:sCenterTextColor="@color/yellow"
            app:sCenterTextSize="15dp"
            app:sCenterTextString="虚位以待"
            app:sCenterTvDrawableWidth="10dp"
            app:sCenterViewGravity="right_center"
            app:sDividerLineType="none"
            app:sLeftBottomTextColor="@color/white"
            app:sLeftBottomTextString="完成时间"
            app:sLeftTextColor="@color/white"
            app:sLeftTextSize="15dp"
            app:sLeftTextString="我的排名"
            app:sRightBottomTextColor="@color/white"
            app:sRightBottomTextString="秒"
            app:sRightTextColor="@color/white"
            app:sRightTextSize="15dp"
            app:sRightTextString="名"
            app:sShapeSelectorNormalColor="@color/xui_config_color_light_blue"
            app:sShapeSelectorPressedColor="@color/xui_config_color_blue"
            app:sShapeSolidColor="@color/xui_config_color_light_blue"
            app:sUseShape="true" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/imageview_tablerank_2image"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginRight="110dp"
                android:clickable="true"
                android:src="@drawable/default_photo"
                app:riv_border_color="@color/xui_config_color_gray_6"
                app:riv_border_width="1dp"
                app:riv_is_circle="true"
                app:riv_selected_border_color="@color/xui_config_color_gray_4"
                app:riv_selected_border_width="1px"
                app:riv_selected_mask_color="@color/xui_config_color_gray_8" />


            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/imageview_tablerank_1image"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:src="@drawable/default_photo"
                app:riv_border_color="@color/xui_config_color_gray_6"
                app:riv_border_width="1dp"
                app:riv_is_circle="true"
                app:riv_selected_border_color="@color/xui_config_color_gray_4"
                app:riv_selected_border_width="1px"
                app:riv_selected_mask_color="@color/xui_config_color_gray_8" />


            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/imageview_tablerank_3image"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="70dp"
                android:clickable="true"
                android:src="@drawable/default_photo"
                app:riv_border_color="@color/xui_config_color_gray_6"
                app:riv_border_width="1dp"
                app:riv_is_circle="true"
                app:riv_selected_border_color="@color/xui_config_color_gray_4"
                app:riv_selected_border_width="1px"
                app:riv_selected_mask_color="@color/xui_config_color_gray_8" />


            <ImageView

                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="85dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/gamestairs" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="210dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_tablerank_2record"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="虚位以待\n无"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textview_tablerank_1record"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="虚位以待\n无"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textview_tablerank_3record"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="虚位以待\n无"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_tablerank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="255dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/background_round_20dp"
                android:nestedScrollingEnabled="false"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:saveEnabled="false"
                android:scrollbars="vertical"
                tools:listitem="@layout/listitem_main3_tablerank" />

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>